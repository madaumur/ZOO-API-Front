{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES6",
		"outDir": "script/",

		"strict": true,
		"alwaysStrict": true,

		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": false,
		"forceConsistentCasingInFileNames": true,

		"esModuleInterop": true,
		"importHelpers": true
	},
    "include":["src/**/*",],
	"exclude": ["node_modules",]
}